<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <aoto.com.baidubodyattribute.SelfView.CameraPreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></aoto.com.baidubodyattribute.SelfView.CameraPreviewView>


    <EditText
        android:visibility="invisible"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/app_id_view"
        android:hint="APP_ID"
        android:textColorHint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:visibility="invisible"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/api_key_view"
        android:hint="APP_ID"
        android:textColorHint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:visibility="invisible"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:id="@+id/secret_key_view"
        android:hint="APP_ID"
        android:textColorHint="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="150dp"
        android:onClick="start"
        android:text="开始测试"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:text="停止测试"
        android:layout_marginTop="200dp"
        android:onClick="stop"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/test_time_residue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:text="剩余测试次数：" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test_time_residue"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:textColor="#ff0000"
        android:layout_marginLeft="30dp"
        android:hint="检测结果"
        android:textSize="20sp" />
</RelativeLayout>
